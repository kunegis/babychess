#! /bin/sh
##
## This ./configure was _not_ generated by autoconf.
## Set verbose=1 in the environment for verbose mode.
## Options:
##      --disable-gui        no GUI is compiled
##      --help               display this help
##

while [ "$1" ]
do
    case $1 in
	--help )
	    <$0 sed -n /^##/s/^##//p
	    exit 0
	    ;;
	--disable-gui )
	    build_without_gui=1
	    export build_without_gui
	    shift
            ;;

	# Ignore unknown standard options as per the GNU Coding
	# Standards
	--enable-* | --disable-* | --with-* | --without-* )
	    echo "$0:  Ignoring option $1"
	    shift
	    ;;

        * )
	    echo "$0:  *** error:  Invalid argument:  $1"
	    exit 1
            ;;
    esac
done

[ "$verbose" ] || verbose=1
export verbose

build_type=optimize build_without_test=1 build_once=1 sh/write-conf >conf.make
